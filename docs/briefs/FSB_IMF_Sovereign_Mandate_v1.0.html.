<script>
(async()=>{
  const v=Date.now();                 // cache-buster
  const r=await fetch(`FSB_IMF_Sovereign_Mandate_v1.0.md?v=${v}`);
  const md=await r.text();
  // tiny inline renderer (no CDN): paragraphs + bold + code blocks
  const html=md
    .replace(/^# (.*)$/gm,'<h1>$1</h1>')
    .replace(/^## (.*)$/gm,'<h2>$1</h2>')
    .replace(/^### (.*)$/gm,'<h3>$1</h3>')
    .replace(/```([\s\S]*?)```/g,'<pre><code>$1</code></pre>')
    .replace(/\*\*(.+?)\*\*/g,'<strong>$1</strong>')
    .replace(/^\* (.*)$/gm,'<li>$1</li>')
    .replace(/(?:\r?\n){2,}/g,'</p><p>')
    .replace(/^((?!<h\d|<pre|<li).+)$/gm,'<p>$1</p>');
  document.getElementById('md').innerHTML = html;
})();
</script>
